                                        </label>
                                    </div>
                                    <div class="setting-item col-md-6 col-sm-6 col-xs-12">
                                        <input type="checkbox" name="fixedHeader"
                                                {{ checkbox.checked(table.settings.fixedHeader) }}
                                            id="features-fixed-header"
                                            class="features-fixed-header-footer"/>
