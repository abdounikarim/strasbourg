                                        <div></div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        <div class="item-title">{{ value }}</div>
                    </div>
                {% endfor %}
                <div style="clear: both;"></div>
            </div>
        </div>

    </div>
