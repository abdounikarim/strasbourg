                </p>
            </div>
        </div>

        <div id="tableLoaderIconDialog" title="{{ environment.translate('Choose icon') }}" style="display: none;">
            {# square-spin loader was removed because it is almost the same as default table loader #}
            {% set preIcons = {
            'timer': 1,
            'ball-beat': 3,
            'ball-circus': 5,
            'ball-atom': 4,
            'ball-spin-clockwise-fade-rotating': 8,
            'line-scale': 5,
            'ball-climbing-dot': 4,
            'square-jelly-box': 2,
            'ball-rotate': 1,
            'ball-clip-rotate-multiple': 2,
            'cube-transition': 2,
            'square-loader': 1,
            'ball-8bits': 16,
            'ball-newton-cradle': 4,
            'ball-pulse-rise': 5,
            'triangle-skew-spin': 1,
            'fire': 3,
            'ball-zig-zag-deflect': 2
            } %}

            <div class="items items-list">
                <div class="item">
                    <div class="item-inner">
                        <div class="item-loader-container">
                            <div class="preicon_img" data-name="default" data-items="0">
                                <div class="{{ loaderClass }} spinner"></div>
                            </div>
                        </div>
                    </div>
                    <div class="item-title">{{ environment.translate('default') }}</div>
                </div>
                {% for value, name in preIcons %}
                    <div class="item">
                        <div class="item-inner">
                            <div class="item-loader-container">
                                <div class="{{ loaderClass }} la-{{ value }} la-2x preicon_img" data-name="{{ value }}" data-items="{{ name }}">
